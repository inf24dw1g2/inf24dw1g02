{
    "compilerOptions":
    {
        "target": "es2017",
        "module": "commonjs",
        "strict": true,
        "rootDir": "./src",
        "outDir": "./dist",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
}